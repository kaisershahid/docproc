{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020", "dom", "dom.iterable"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
	  	"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
	  	"module": "commonjs",
		"outDir": "./lib"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/tests", "src/**/*.test.ts"]
}
